{
  "openapi": "3.0.2",
  "info": {
    "title": "Sales Prospects API",
    "description": "Sales prospects is a plugin that lets you to keep track of your organizationâ€™s prospects and deals.",
    "version": "1.0.0",
    "contact": {
      "email": "developer@zuri.chat"
    }
  },
  
  "paths": {

    "/api/v1/prospects/": {
      "get": {
        "tags": [
          "Prospects"
        ],
        "summary": "Reads data from ZuriCore DB and return list of available prospects.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/prospect/_id"
          },
          {
            "$ref": "#/components/parameters/prospect/first_name"
          },
          {
            "$ref": "#/components/parameters/prospect/last_name"
          },
          {
            "$ref": "#/components/parameters/prospect/company"
          },
          {
            "$ref": "#/components/parameters/prospect/title"
          },
          {
            "$ref": "#/components/parameters/prospect/email"
          },
          {
            "$ref": "#/components/parameters/prospect/deal_stages"
          }
        ]
      }
    },
    "/api/v1/prospects/{id}/": {
      "get": {
        "tags": [
          "Prospects"
        ],
        "summary": "Fetches prospect with the specified id from the DB",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of prospect to fetch",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/prospects/create/": {
      "post": {
        "tags": [
          "Prospects"
        ],
        "summary": "Creates a new prospect",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Prospect",
                "type": "object",
                "properties": {
                  "first_name": {
                    "type": "string",
                    "default": "John"
                  },
                  "last_name": {
                    "type": "string",
                    "default": "Doe"
                  },
                  "company": {
                    "type": "string",
                    "default": "Zuri"
                  },
                  "title": {
                    "type": "string",
                    "default": "CEO"
                  },
                  "email": {
                    "type": "string",
                    "default": "example@mail.com"
                  },
                  "deal_stages": {
                    "type": "string",
                    "enum": [
                      "prospect",
                      "proposal",
                      "negotiation",
                      "closed"
                    ],
                    "default": "proposal"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/prospects/update/{id}/": {
      "put": {
        "tags": [
          "Prospects"
        ],
        "summary": "Edits a prospect with specified id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of prospect to be edited",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        }
      }
    },


    "/api/v1/deals/list/": {
