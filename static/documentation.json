    "/api/v1/add-to-room/": {
      "post": {
        "tags": [
          "Room"
        ],
        "summary": "Adds users to a room.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/room"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/room/_id"
          },
          {
            "$ref": "#/components/parameters/room/room_name"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Room",
                "type": "object",
                "properties": {
                  "user": {
                    "type": "integer",
                    "default": 1
                  },
                  "room_name": {
                    "type": "string",
                    "default": "prospects"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/room/": {
      "get": {
        "tags": [
          "Room"
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/leave-room/": {
      "post": {
        "tags": [
          "Room"
        ],
        "summary": "Deletes users from a room.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/room"
                }
              }
