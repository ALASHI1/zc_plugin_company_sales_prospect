  "security": [
    {
      "app_id": []
    }
  ],
  "components": {
    "schemas": {

      "prospect": {
        "title": "Prospect",
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "title": "id",
            "default": "123abc456def"
          },
          "first_name": {
            "type": "string",
            "default": "John"
          },
          "last_name": {
            "type": "string",
            "default": "Doe"
          },
          "company": {
            "type": "string",
            "default": "Zuri"
          },
          "title": {
            "type": "string",
            "default": "CEO"
          },
          "email": {
            "type": "string",
            "default": "example@mail.com"
          },
          "deal_stages": {
            "type": "string",
            "enum": [
              "prospect",
              "proposal",
              "negotiation",
              "closed"
            ],
            "default": "proposal"
          }
        }
      },

      "deal": {
        "title": "Deal",
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "title": "id",
            "default": "123abc456def"
          },
          "prospect_id": {
            "type": "string",
            "default": "123abc456def789ghi"
          },
          "status": {
            "type": "string",
            "default": "Open"
          },
          "amount": {
            "type": "string",
            "default": 123456789
          }
        }
      },

      "onboarding": {
        "title": "Onboarding",
        "type": "object",
        "properties": {
          "company": {
            "type": "string",
            "default": "Zuri"
          },
          "sector": {
            "type": "string",
            "default": "technology"
          },
          "position": {
            "type": "string",
            "default": "executive"
          }
        }
      },


      "room": {
        "title": "Room",
        "type": "object",
        "properties": {
          "user": {
            "type": "integer",
            "default": 1
          },
          "room_name": {
            "type": "string",
            "default": "prospects"
          }
        }
      }
    },

    "parameters": {

      "prospect": {
        "_id": {
          "name": "_id",
          "in": "query",
          "description": "**_id**. *Example: 23142dfdwr432*. You can fetch prospects by their id.",
          "schema": {
            "type": "string",
            "default": "123abc456def"
          },
          "required": true
        },
        "first_name": {
          "name": "first_name",
          "in": "query",
          "description": "**First name**. *Example: John*. This contains the first name of the prospect",
          "schema": {
            "type": "string",
            "default": "John"
          },
          "required": true
        },
        "last_name": {
          "name": "last_name",
          "in": "query",
          "description": "**Last name**. *Example: Doe*. This contains the last name of the prospect",
          "schema": {
            "type": "string",
            "default": "Doe"
          },
          "required": true
        },
        "company": {
          "name": "company",
          "in": "query",
          "description": "**Company**. *Example: Zui*. This contains the name of the prospect company",
          "schema": {
            "type": "string",
            "default": "Zuri"
          },
          "required": true
        },
        "title": {
          "name": "title",
          "in": "query",
          "description": "**Title**. *Example: Mr./Miss/Mrs.*. This is the title of the propsect",
          "schema": {
            "type": "string",
            "default": "CEO"
          },
          "required": true
        },
        "email": {
          "name": "email",
          "in": "query",
          "description": "**Email**. *Example: example@email.com*. This is the email of the propsect",
          "schema": {
            "type": "string",
            "default": "example@mail.com"
          },
          "required": true
        },
        "deal_stages": {
          "name": "deals_stages",
          "in": "query",
          "description": "**Deal stages**. *Example: prospect*. This is the stage of a prospect deal",
          "schema": {
            "type": "string",
            "enum": [
              "prospect",
              "proposal",
              "negotiation",
              "closed"
            ],
            "default": "proposal"
          },
          "required": true
        }
      },


      "deal": {
        "_id": {
          "name": "_id",
          "in": "query",
          "description": "**_id**. *Example: 23142dfdwr432*. You can fetch deals by their id.",
          "schema": {
            "type": "string",
            "default": "123abc456def"
          },
          "required": true
        },
        "prospect_id": {
          "name": "prospect_id",
          "in": "query",
          "description": "**Prospect ID**. *Example: 123abc456def789ghi*. This contains the id of the corresponding prospect",
          "schema": {
            "type": "string",
            "default": "123abc456def789ghi"
          },
          "required": true
        },
        "status": {
          "name": "status",
          "in": "query",
          "description": "**Status**. *Example: Open*. This contains the status",
          "schema": {
            "type": "string",
            "default": "Open"
          },
          "required": true
        },
        "amount": {
          "name": "amount",
          "in": "query",
          "description": "**Amount**. *Example: 1234567*. This contains the of the deal",
          "schema": {
            "type": "string",
            "default": 123456789
          },
          "required": true
        }
      },


      "room": {
        "_id": {
          "name": "user_id",
          "in": "query",
          "description": "**user_id**. *Example: 1*. You can fetch users by their id.",
          "schema": {
            "type": "integer",
            "default": 1
          },
          "required": true
        },
        "room_name": {
          "name": "room_name",
          "in": "query",
          "description": "**Room Name**. *Example: Prospect*. This is the name of the room",
          "schema": {
            "type": "string",
            "default": "Prospect"
          },
          "required": true
        }
      }
    },
    "securitySchemes": {
      "app_id": {
        "type": "apiKey",
        "description": "API key to authorize requests.",
        "name": "Session",
        "in": "cookie"
      }
    }
  },
  "servers": [
    {
      "description": "Sales Prospects API",
      "url": "https://sales.zuri.chat/"
    }
  ]
}