          },
          {
            "$ref": "#/components/parameters/deal/status"
          },
          {
            "$ref": "#/components/parameters/deal/amount"
          }
        ]
      }
    },
    "/api/v1/deals/{id}/": {
      "get": {
        "tags": [
          "Deals"
        ],
        "summary": "Fetches prospect with the specified id from the DB",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of deal to fetch",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deal"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/deals/create/": {
      "post": {
        "tags": [
          "Deals"
        ],
        "summary": "Creates a new deal",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deal"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Deal",
                "type": "object",
                "properties": {
                  "prospect_id": {
                    "type": "string",
                    "default": "123abc456def789ghi"
                  },
                  "status": {
                    "type": "string",
                    "default": "Open"
                  },
                  "amount": {
                    "type": "string",
                    "default": 123456789
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/deals/update/{id}/": {
      "put": {
        "tags": [
          "Deals"
        ],
        "summary": "Edits a deal with specified id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of prospect to be edited",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deal"
                }
              }
            }
          }
        }
      }
    },



    "/api/v1/onboarding/": {
